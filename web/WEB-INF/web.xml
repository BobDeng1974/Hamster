<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <listener>
        <listener-class>cn.coselding.myblog.listener.TimeListener</listener-class>
    </listener>

    <!-- 中文编码过滤器 -->
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>cn.coselding.myblog.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>charset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- html请求过滤器 -->
    <filter>
        <filter-name>articleViewFilter</filter-name>
        <filter-class>cn.coselding.myblog.filter.ArticleViewFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>articleViewFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>articleViewFilter</filter-name>
        <url-pattern>*.htm</url-pattern>
    </filter-mapping>


    <!-- 全站不缓存动态页面过滤器 -->
    <filter>
        <filter-name>NoCacheFilter</filter-name>
        <filter-class>cn.coselding.myblog.filter.NoCacheFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>NoCacheFilter</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>

    <!-- 全站缓存静态资源过滤器 -->
    <filter>
        <filter-name>ExpiresFilter</filter-name>
        <filter-class>cn.coselding.myblog.filter.ExpiresFilter</filter-class>
        <!-- css缓存4小时 -->
        <init-param>
            <param-name>css</param-name>
            <param-value>4</param-value>
        </init-param>
        <!-- js缓存4小时 -->
        <init-param>
            <param-name>js</param-name>
            <param-value>4</param-value>
        </init-param>
        <!-- jpg缓存1小时 -->
        <init-param>
            <param-name>jpg</param-name>
            <param-value>1</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ExpiresFilter</filter-name>
        <url-pattern>*.jpg</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ExpiresFilter</filter-name>
        <url-pattern>*.css</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ExpiresFilter</filter-name>
        <url-pattern>*.js</url-pattern>
    </filter-mapping>

    <!--Struts2过滤器-->
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/public/404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/public/500.html</location>
    </error-page>
    <error-page>
        <error-code>501</error-code>
        <location>/public/500.html</location>
    </error-page>
    <error-page>
        <error-code>505</error-code>
        <location>/public/500.html</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>